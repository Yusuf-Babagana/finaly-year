<%- include("partials/header"); %>
<div class="content-wrap container-fluid">
<h1 class="heading text-center">Login</h1>
<div class="row">
    <div class="col-lg-6 pb-5 mx-auto">
      <% if(errorMessage) {%>
      <div class="alert alert-danger" role="alert">
        <%= errorMessage %>
      </div>
      <% } %>

      <div class="card auth-card">
        <div class="card-body">
        
          <form action="/login" method="POST">
            <div class="form-floating mb-3">
              <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" required>
              <label for="email">Email address</label>
            </div>
            <div class="form-floating mb-3">
              <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
              <label for="password">Password</label>
            </div>
            <button class="btn btn-dark" type="submit" name="button">Login</button>
          </form>
          <hr>
          <p style="text-align: center;">Don't have an account yet? <a href="/register">Register</a></p>
        </div>

      </div>

    </div>
</div>


</div>
<%- include("partials/footer"); -%>