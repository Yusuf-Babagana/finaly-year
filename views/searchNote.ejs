<%- include("partials/header"); %>
<div class="content-wrap container-fluid">
    <h1 class="heading py-4">Search Slides</h1>
<form class="add-material add-note px-3 my-3 text-left" action="/departments/<%= code %>/notes/search" method="post">
  <div class="mb-3">
    <label for="topics" class="form-label">Topics</label>
    <input type="text" class="form-control" name="topics" id="topics">
  </div>
  <div class="mb-3">
    <label for="subject" class="form-label">Course</label>
    <select name="subject" id="subject" class="form-select" aria-label="Select subject">
      <% subjects.forEach(subject=> { %>
        <option value="<%= subject.code%>">
          <%= subject.name%>
        </option>
        <% }); %>
    </select>
  </div>
  <div class="mb-3">
    <label for="module" class="form-label">Module</label>
    <input type="number" class="form-control" name="module" id="module" min=1 max=5>
  </div>
  <button class="btn btn-secondary" type="submit">Search</button>
</form>
</div>
<%- include("partials/footer"); %>