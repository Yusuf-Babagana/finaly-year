<%- include("partials/header"); %>
<h1 class="heading">Departments</h1>
<div class="row row-cols-1 row-cols-md-3 text-center">
<% departments.forEach(d => { %>
  <div class="col-lg-4 col-md-6">
    <div class="card">
      <div class="card-header">
        <h5>
          <%= d.name %>
        </h5>
      </div>
      <div class="card-body d-flex flex-column gap-2">
        <% if(d.editLink){%>
        <% if (authRole !=='student'){ %>
          <a class="btn btn-primary" href="<%=d.editLink %>" role="button"><i
              class="fa-solid fa-pen"></i> Edit</a>
          <% } %>
          <% } %>
          <% if(d.deleteLink){%>
            <% if (authRole ==='admin'){ %>
              <a class="btn btn-primary" href="<%=d.deleteLink %>" role="button"><i class="fa-solid fa-trash"></i> Delete</a>
            <% } %>
            <% } %>
            <% if(d.searchNote){ %>
                <a class="" href="<%=d.searchNote %>">Search Notes</a>
              <% } %>
              <% if(d.searchQP){ %>
                <a class="" href="<%=d.searchQP %>">Search Question Papers</a>
                <% } %>
              <% if(d.addNote){ %>
                <a class="" href="<%=d.addNote %>">Add Note</a>
                <% } %>
                <% if(d.addQP){ %>
                  <a class="" href="<%=d.addQP %>">Add Question Papers</a>
              <% } %>
      </div>
    </div>
  </div>
<% }); %>
</div>
<%- include("partials/footer"); %>