<%- include("partials/header"); -%>

<h1 class="heading">Register</h1>
<div class="row">
    <div class="col-lg-6 pb-5 mx-auto">
      <% if(errorMessage) {%>
      <div class="alert alert-danger" role="alert">
        <%= errorMessage %>
      </div>
      <% } %>

      <div class="card">
        <div class="card-body">
        
          <!-- <form action="/register" id="registration" method="POST" onsubmit="return check(event)"> -->
            <form action="/register" id="registration" method="POST">
            <div class="form-floating mb-3">
                <input class="form-control" id="username" name="username" placeholder="UserName" required>
                <label for="username">User Name</label>
            </div>
            <div class="form-floating mb-3">
              <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" required>
              <label for="email">Email address</label>
            </div>
            <div class="form-floating mb-3">
              <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
              <label for="password">Password</label>
            </div>
            <div class="form-floating mb-3">
            
                <fieldset>
                    <p class="radio">Please select your role:</p>
                    <div>
                    <input type="radio" id="teacher" name="role" value="teacher" />
                    <label for="teacher" class="radio">Teacher</label>
                
                    <input type="radio" id="student" name="role" value="student" />
                    <label for="student" class="radio">Student</label>
                </fieldset>
            </div>
            
            <button class="btn btn-lg btn-dark" id="submit" type="submit" name="button"><i class="fa-solid fa-lock"></i>  Create Account</button>
          </form>
          <hr>
        </div>
        
