<%- include("partials/header"); %>
<section id="profile" class="center-align">
    <h1 class="heading">Your Profile</h1>
        <div class="col-lg-12 col-md-6">
            <div class="card profile-card">
                <div class="card-header">
                    <h3>Name:  <%= users.username %></h3>
                </div>
                <div class="card-body">
                    <p class="card-text">Email: <%= users.email %></p>
                    <p class="card-text">Role: <%= users.name %></p>
                    <a class="btn btn-lg btn-danger delete w-40" href='#' role="button"><i class="fa-solid fa-trash"></i> Delete profile</a>

                </div>
            </div>
        </div>
</section>

<section id="bookmarks">
    <h2 class="heading">Your Bookmarks</h2>
    <div class="row row-cols-1 row-cols-md-3 text-center">
        <% bookmarks.forEach((note) => { %>
            <div class="col-lg-4 col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3><%= note.title %><a class="bookmark" href="#"><i class="fa-solid fa-trash"></i></a></h3>
                    </div>
                    <div class="card-body">
                        <p class="card-text">Module <%= note.module_no %></p>
    
                        <a class="btn btn-lg w-40" href="<%= note.link %>" role="button"><i class="fa-solid fa-book-open-reader"></i> Open</a>
    
                    </div>
                </div>
            </div>
        <% }); %>
        </div>
</section>

<%- include("partials/footer"); %>