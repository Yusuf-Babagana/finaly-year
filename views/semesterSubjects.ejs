<%- include("partials/header"); %>
<div class="row pt-3 pb-3 mx-lg-4 px-3 px-lg-5">
<% subjects.forEach((subject)=> { %>
<div class="col-lg-4 pb-3">
<div class="card subject-card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><a href="/departments/<%= deptCode %>/subjects/<%= subject.code %>"><%= subject.name %></a></h5>
    <h6 class="card-subtitle mb-2 text-body-secondary"><%= subject.code %></h6>
    <% if (authRole !=='student' ){ %>
      <a class="btn btn-primary btn-no-m" href="/edit?type=subject&id=<%=subject.id %>" role="button"><i
          class="fa-solid fa-pen"></i> Edit</a><br>
      <% } %>
  </div>
  </div>
</div>
<% }); %>
</div>
<%- include("partials/footer"); %>