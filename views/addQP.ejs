<%- include("partials/header"); %>
  <form class="add-note px-3 my-3 text-left" action="/departments/<%= code%>/question-papers/add" method="post">
    <div class="mb-3">
      <label for="link" class="form-label">Link</label>
      <small id="contentHelp" class="form-text text-muted">(*)</small>
      <input type="link" class="form-control" name="link" id="link" required>
    </div>
    <div class="mb-3">
      <label for="subject" class="form-label">Subject</label>
      <select name="subject" id="subject" class="form-select" aria-label="Select subject">
        <% subjects.forEach(subject=> { %>
          <option value="<%= subject.id%>">
            <%= subject.name%>
          </option>
          <% }); %>
      </select>
    </div>
    <div class="mb-3">
      <label for="year" class="form-label">Year</label>
      <small id="contentHelp" class="form-text text-muted">(*)</small>
      <input type="text" class="form-control" name="year" id="year" required>
    </div>
    <div class="mb-3">
      <label for="scheme" class="form-label">Scheme</label>
      <small id="contentHelp" class="form-text text-muted">(*)</small>
      <input type="text" class="form-control" name="scheme" id="scheme" required>
    </div>
    <button class="btn btn-secondary" type="submit">Submit</button>
  </form>
  <%- include("partials/footer"); %>